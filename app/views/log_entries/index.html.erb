<div class="flex space-x-4 ">
  <div>
    <h1 class="m-2">Log Entries</h1>
  </div>
  <div>
    <%= link_to 'New Log Entry', new_log_entry_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
  </div>
</div>

<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Set</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
      <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 150px;">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @log_entries.each do |log_entry| %>
      <tr class="odd:bg-white even:bg-gray-200">
        <td class="px-6 py-4 text-sm text-gray-500"><%= log_entry.title %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= link_to_if(log_entry.data_set, log_entry.data_set, log_entry.data_set )  %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= log_entry.timestamp %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right" style="width: 150px;">
          <%= link_to 'Show', log_entry, class: 'text-blue-600 hover:text-blue-900' %> |
          <%= link_to 'Edit', edit_log_entry_path(log_entry), class: 'text-blue-600 hover:text-blue-900' %>          
        </td>
      </tr>
    <% end %>
  </tbody>

  <%= paginate @log_entries, remote: false %>
</table>


